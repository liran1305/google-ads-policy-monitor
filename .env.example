# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=liran@crawl5.com
FROM_EMAIL=your-email@gmail.com

# API Keys
GEMINI_API_KEY=your-gemini-api-key

# Backend URLs
# Development
CRAWL5_API_URL=http://localhost:4000
# Production (replace with your production server)
# CRAWL5_API_URL=https://crawl5-prod.yourdomain.com

# Crawl5 Authentication (required for backend access)
# Development API key
CRAWL5_API_KEY=your-dev-crawl5-api-key
# Production API key (replace with production key)
# CRAWL5_API_KEY=your-prod-crawl5-api-key
# OR use auth token instead:
# CRAWL5_AUTH_TOKEN=your-crawl5-auth-token

# MongoDB Configuration (for production)
USE_MONGODB=false
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=policy_monitor

# Policy Configuration
# Set to true to force full policy URLs in production (324 URLs)
# Set to false or omit to use test config if available (5 URLs)
USE_FULL_CONFIG=false
